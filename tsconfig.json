{
  "compilerOptions": {
    "target": "es5", // Specify ECMAScript target version
    "module": "commonjs", // Specify module code generation
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Enable support for importing CommonJS modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensure that file casing is consistent
    "allowJs": true, // Allow JavaScript files to be compiled
    "outDir": "./dist", // Redirect output structure to the directory
    "moduleResolution": "node", // Use Node.js-style module resolution
    "jsx": "react", // Support JSX in .tsx files
    "resolveJsonModule": true // Allow import of JSON files
  },
  "include": ["src/**/*"], // Include all TypeScript and JavaScript files in src
  "exclude": ["node_modules"] // Exclude node_modules from compilation
}
